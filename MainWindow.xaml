<Window x:Class="Зад3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Зад3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="x" Background="Ivory">
            <Polygon Points="10,90 100,100 100,0" x:Name="objectToMove" Width="149" Height="150" Fill="Green"  Canvas.Left="10" Canvas.Top="120" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Canvas>
        <StackPanel Orientation = "Horizontal" HorizontalAlignment = "Center" VerticalAlignment = "Bottom">
            <Button Content = "Влево" Click = "LeftButton_Click" Height = "50" Width="100" Background = "LightBlue"/>
            <Button Content = "Наверх" Click = "UpButton_Click" Height = "50" Width="100" Background = "LightBlue"/>
            <Button Content = "Вниз" Click = "DownButton_Click" Height = "50" Width="100" Background = "LightBlue"/>
            <Button Content = "Вправо" Click = "RightButton_Click" Height = "50" Width="100" Background = "LightBlue"/>
        </StackPanel>
    </Grid>
</Window>
